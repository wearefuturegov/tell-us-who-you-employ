<header class="page-header">
  <%= link_to "Back", admin_services_path, class: "go-back" %>
  <h1 class="page-header__title"><%= @service.name %></h1>
  <p><strong>
    <%#= [@service.location_name, @service.address_1, @service.city, @service.postal_code].reject(&:blank?).join(', ') %>
  </strong></p>
  <% if @senco.present? %>
    <p><%= link_to admin_employee_path(@senco.id) do %>
      <strong>SENCO:</strong> <%= "#{@senco.forenames} #{@senco.surname}" %>
    </p>
    <% end %>
  <% else %>
    <strong>SENCO:</strong> n/a
  <% end %>
  <% if @safeguarding_lead.present? %>
    <%= link_to admin_employee_path(@safeguarding_lead.id) do %>
      <p>
      <strong>Designated Safety Lead:</strong> <%= "#{@safeguarding_lead.forenames} #{@safeguarding_lead.surname}" %>
      </p>
    <% end %>
  <% else %>
    <p>
    <strong>Designated Safety Lead:</strong> n/a
    </p>
  <% end %>
</header>

<%= render "admin/employees/filters" %>

<%= render partial: 'admin/employees/index', locals: { employees: @employees } %>