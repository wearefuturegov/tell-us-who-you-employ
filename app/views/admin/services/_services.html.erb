
<% if @services.present? %>
<table class="table-holder">
  <thead>
    <tr>
    <th <%= "aria-sort=\"ascending\"" if @filterrific.sorted_by == 'name_asc' %> 
        <%= "aria-sort=\"descending\"" if @filterrific.sorted_by == 'name_desc' %>>
        Provider
      </th>
    <th <%= "aria-sort=\"ascending\"" if @filterrific.sorted_by == 'employees_count_desc' %> 
        <%= "aria-sort=\"descending\"" if @filterrific.sorted_by == 'employees_count_asc' %>>
        Number of Staff
      </th>
    <th <%= "aria-sort=\"ascending\"" if @filterrific.sorted_by == 'location_asc' %> 
        <%= "aria-sort=\"descending\"" if @filterrific.sorted_by == 'location_desc' %>>
        Address
      </th>
    </tr>
  </thead>
  <tbody>
  <% @services.each do |service| %>
    <tr>
      <td>
        <strong>
          <%= link_to service.name, admin_service_path(service) %>
        </strong>
      </td> 
      <td><%= service.employees.count %></td>
      <td>
        <%= [service.location_name, service.address_1, service.city, service.postal_code].reject(&:blank?).join(', ') %>
      </td>
      <td>
        <%= link_to "View all records", admin_service_path(service) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<% else %>
      <div>
        <h1>No providers found</td>
      </div>
<% end %>
